<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow" />

        <TextView
            style="@style/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:height="48dp"
            android:gravity="center_vertical"
            android:text="@string/new_playlist" />

    </LinearLayout>

    <ImageView
        android:id="@+id/placeholder"
        android:layout_width="0dp"
        android:layout_height="312dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edit_name"
        android:layout_margin="@dimen/_16dp"
        android:background="@drawable/rounded_stroke_rectangle"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/placeholder"
        app:layout_constraintBottom_toBottomOf="@id/placeholder"
        app:layout_constraintStart_toStartOf="@id/placeholder"
        app:layout_constraintEnd_toEndOf="@id/placeholder"
        android:src="@drawable/new_playlist_placeholder"
        />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56dp"
        android:paddingStart="@dimen/_16dp"
        app:layout_constraintTop_toBottomOf="@id/placeholder"
        app:layout_constraintBottom_toTopOf="@id/edit_description"
        android:layout_margin="@dimen/_16dp"
        android:textSize="@dimen/t_size_16"
        android:hint="@string/new_playlist_name"
        android:background="@drawable/rounded_rectangle"/>

    <EditText
        android:id="@+id/edit_description"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56dp"
        android:paddingStart="@dimen/_16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_name"

        android:layout_margin="@dimen/_16dp"
        android:textSize="@dimen/t_size_16"
        android:hint="@string/new_playlist_description"
        android:background="@drawable/rounded_rectangle"
        />

    <Button
        android:id="@+id/create_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44dp"
        android:layout_margin="@dimen/_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textAllCaps="false"
        android:text="@string/to_create"
        android:textSize="@dimen/t_size_16"
        android:textColor="@color/dn_white"
        android:backgroundTint="@drawable/button_selector"
        />
</androidx.constraintlayout.widget.ConstraintLayout>