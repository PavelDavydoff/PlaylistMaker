<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azure"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ma_padding"
    android:paddingRight="@dimen/ma_padding"
    android:paddingBottom="@dimen/ma_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/ma_text_size"
        android:paddingTop="@dimen/ma_padding"
        android:paddingBottom="@dimen/ma_padding"/>

    <Button
        android:id="@+id/search"
        android:text="@string/search"
        app:icon="@drawable/search"
        style="@style/MainButton"/>

    <Button
        android:id="@+id/library"
        android:text="@string/library"
        app:icon="@drawable/library"
        style="@style/MainButton" />

    <Button
        app:icon="@drawable/settings"
        android:id="@+id/settings"
        android:text="@string/settings"
        style="@style/MainButton"/>

</LinearLayout>