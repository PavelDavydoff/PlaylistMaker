<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".library.ui.PlaylistsFragment">

    <Button
        android:id="@+id/create_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_24dp"
        android:backgroundTint="@color/yp_black"
        android:baselineAligned="false"
        android:paddingHorizontal="@dimen/_14dp"
        android:paddingVertical="@dimen/_10dp"
        android:text="@string/new_playlist"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/size_14sp"
        app:cornerRadius="@dimen/radius_54dp" />

    <ImageView
        android:id="@+id/no_playlists_image"
        style="@style/notFoundPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_46dp" />

    <TextView
        android:id="@+id/no_playlists_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/_16dp"
        android:text="@string/no_playlists"
        android:textColor="@color/black"
        android:textSize="@dimen/size_19sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_8dp"/>

</LinearLayout>