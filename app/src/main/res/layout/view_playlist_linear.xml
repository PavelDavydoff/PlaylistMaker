<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_61"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_playlist_linear">
    
    <ImageView
        android:id="@+id/image_playlist_player"
        android:layout_width="@dimen/size_45"
        android:layout_height="@dimen/size_45"
        android:layout_marginStart="@dimen/_16dp"
        app:layout_constraintTop_toTopOf="@id/view_playlist_linear"
        app:layout_constraintStart_toStartOf="@id/view_playlist_linear"
        app:layout_constraintBottom_toBottomOf="@id/view_playlist_linear"
        android:src="@drawable/placeholder"/>

    <TextView
        android:id="@+id/playlist_name_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_playlist_player"
        app:layout_constraintTop_toTopOf="@id/image_playlist_player"
        android:layout_marginStart="@dimen/_16dp"
        android:textSize="@dimen/t_size_16"
        tools:text="Новый альбом"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tracks_number_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_playlist_player"
        app:layout_constraintTop_toBottomOf="@id/playlist_name_player"
        android:layout_marginStart="@dimen/_16dp"
        android:textSize="11sp"
        android:textColor="@color/gray"
        tools:text="100500 треков"/>

</androidx.constraintlayout.widget.ConstraintLayout>