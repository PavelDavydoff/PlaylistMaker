<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/s_medium_padding">

        <ImageView
            android:id="@+id/back"
            style="@style/backButton" />

        <TextView
            style="@style/title"
            android:text="@string/settings" />
    </LinearLayout>

    <Switch
        android:id="@+id/switchTheme"
        style="@style/SettingsElement"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/s_padding"
        android:saveEnabled="false"
        android:text="@string/black_theme"
        android:thumbTint="@color/switch_Thumb"
        android:trackTint="@color/switch_Track"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:id="@+id/share"
        style="@style/SettingsButton"
        android:text="@string/share"
        app:icon="@drawable/share" />

    <Button
        android:id="@+id/support"
        style="@style/SettingsButton"
        android:text="@string/support"
        app:icon="@drawable/support" />

    <Button
        android:id="@+id/agreement"
        style="@style/SettingsButton"
        android:text="@string/agreement"
        app:icon="@drawable/arrow_forward" />

</LinearLayout>

