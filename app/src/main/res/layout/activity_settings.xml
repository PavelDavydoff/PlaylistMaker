<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/s_medium_padding"
        android:paddingStart="@dimen/s_padding"
        android:paddingEnd="@dimen/s_padding">

        <Button
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:backgroundTint="@color/white"


            app:icon="@drawable/back_arrow"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            app:iconSize="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/ma_text_size"
            />
    </LinearLayout>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_height"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/ma_padding"
        android:paddingEnd="@dimen/s_padding"
        android:text="@string/black_theme"
        android:textSize="@dimen/s_text_size"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_height"
        android:backgroundTint="@color/white"
        android:text="@string/share"
        android:gravity="center_vertical|start"
        android:textColor="@color/black"
        android:textSize="@dimen/s_text_size"
        android:paddingStart="@dimen/ma_padding"
        android:paddingEnd="@dimen/ma_padding"
        app:iconSize="@dimen/s_icon_size"
        app:iconGravity="end"
        app:icon="@drawable/share"
        app:iconTint="@color/black" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_height"
        android:backgroundTint="@color/white"
        android:text="@string/support"
        android:gravity="center_vertical|start"
        android:textColor="@color/black"
        android:textSize="@dimen/s_text_size"
        android:paddingStart="@dimen/ma_padding"
        android:paddingEnd="@dimen/ma_padding"
        app:iconSize="@dimen/s_icon_size"
        app:iconGravity="end"
        app:icon="@drawable/support"
        app:iconTint="@color/black" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_height"
        android:backgroundTint="@color/white"
        android:text="@string/agreement"
        android:gravity="center_vertical|start"
        android:textColor="@color/black"
        android:textSize="@dimen/s_text_size"
        android:paddingStart="@dimen/ma_padding"
        android:paddingEnd="@dimen/ma_padding"
        app:iconSize="@dimen/s_icon_size"
        app:iconGravity="end"
        app:icon="@drawable/arrow_forward"
        app:iconTint="@color/black"/>

</LinearLayout>

