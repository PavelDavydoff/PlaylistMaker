<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/dn_white</item>
        <item name="android:textColor">@color/yp_dn_black</item>
        <item name="android:textSize">@dimen/t_size_22</item>
        <item name="android:layout_marginTop">@dimen/ma_button_padding</item>
        <item name="android:layout_marginBottom">@dimen/ma_button_padding</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">@dimen/ma_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/ma_icon_padding</item>
        <item name="iconSize">@dimen/ma_icon_size</item>
        <item name="iconTint">@color/yp_dn_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsElement" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_61</item>
        <item name="android:paddingStart">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/s_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SettingsButton" parent="SettingsElement">
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:paddingEnd">@dimen/_16dp</item>
        <item name="iconSize">@dimen/s_icon_size</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/gray</item>
    </style>

    <style name="backButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="tint">@color/yp_black</item>
        <item name="android:src">@drawable/back_arrow</item>
    </style>

    <style name="titleTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingStart">@dimen/padding_12</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/t_size_22</item>
    </style>

    <style name="notFoundPlaceholder">
        <item name="android:src">@drawable/not_found_light</item>
    </style>

    <style name="noInternetPlaceholder">
        <item name="android:src">@drawable/no_internet_light</item>
    </style>

    <style name="player_text">
        <item name="android:textSize">@dimen/t_size_13</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="menu_text">
        <item name="android:textSize">@dimen/t_size_16</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="player_text2">
        <item name="android:textSize">@dimen/t_size_13</item>
        <item name="android:textColor">@color/grayDN</item>
    </style>

    <style name="add_to_collection_button">
        <item name="android:src">@drawable/add_to_collection_button</item>
    </style>

    <style name="add_to_favorites_button">
        <item name="android:src">@drawable/is_not_favorite</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/text_input_color_selector</item>
        <item name="hintTextColor">@drawable/text_input_color_selector</item>

    </style>
</resources>